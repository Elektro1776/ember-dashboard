<div class="widgets-index">

    <div class="row">
        <div class="col-xs-12">
            <h3>Dashboard Widgets</h3>
            <p>Use these widgets to build your dashboard and reports.</p>
        </div>
    </div>

    <div class="clearfix" style="clear: both;"> <hr> </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="well">
            <span class="block-header">Widgets</span>


              <div class="row row-fixed-width">
                    <div class="col-xs-12 col-lg-3">
                        {{#metric-box title="Acme Stock" bottomText="Closing markets at 1:00pm PST" boxShadow=false}}
                            <span class="value green"><span class="glyphicon glyphicon-triangle-top" aria-hidden="true"></span> 60%</span>
                        {{/metric-box}}
                    </div>
                    <div class="col-xs-12 col-lg-9">
                        <pre>
&#123;&#123;#metric-box title="Acme Stock" bottomText="Closing markets ..." boxShadow=false&#125;&#125;
    ...
&#123;&#123;/metric-box&#125;&#125;
                        </pre>
                    </div>
              </div>

              <div class="clearfix" style="clear: both;"> <hr> </div>

              <div class="row row-fixed-width">
                    <div class="col-xs-12 col-lg-3">
                        {{#metric-box title="Server Downtime" showProgressBar=true progressValue=50 showProgressLabel=true type="danger" boxShadow=false animate=true striped=true smallProgressBar=true}}
                            <span class="value red">50%</span>
                        {{/metric-box}}
                    </div>
                    <div class="col-xs-12 col-lg-9">
                        <pre>
&#123;&#123;metric-box showProgressBar=true progressValue=50 showProgressLabel=true ...&#125;&#125;
    ...
&#123;&#123;/metric-box&#125;&#125;
                        </pre>
                    </div>
              </div>


              <div class="clearfix" style="clear: both;"> <hr> </div>

              <div class="row row-fixed-width">
                    <div class="col-xs-12 col-lg-3">
                        {{#metric-box title="Month Average" borderLess=false boxShadow=false badgeLabel="New" badgeClass="bg-blue-2" bottomText="Day By Day Revenue."}}
                            <div style="margin-top: 20px;">
                                {{#peity-chart type="bar" options=peityLargeOptions}}2,4,6,4,3,3,4,6,4,2{{/peity-chart}}
                            </div>
                        {{/metric-box}}
                    </div>
                    <div class="col-xs-12 col-lg-9">
                        <pre>
&#123;&#123;metric-box borderLess=false boxShadow=false badgeLabel="Weekly" ...&#125;&#125;
    ...
&#123;&#123;/metric-box&#125;&#125;
                        </pre>
                    </div>
              </div>


        </div>
      </div>
    </div>

</div>
