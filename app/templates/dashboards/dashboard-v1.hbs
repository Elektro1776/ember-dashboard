                        <td>{{#peity-chart type="bar" options=peityOptions}}1,2,4,7,6,9,7,5,3,2{{/peity-chart}}</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-blue-2">104</span></td> <td>GOLD Inc.</td>
                        <td><span class="red">{{fa-icon "arrow-down"}} 13,6%</span></td>
                        <td>{{fa-icon "calendar"}} 02/05/2015</td>
                        <td>{{#peity-chart type="bar" options=peityOptions}}1,1,4,6,6,2,1,7,5,2{{/peity-chart}}</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-blue-2">105</span></td> <td>DUSS Inc.</td>
                        <td><span class="red">{{fa-icon "arrow-down"}} 03,1%</span></td>
                        <td>{{fa-icon "calendar"}} 01/13/2015</td>
                        <td>{{#peity-chart type="bar" options=peityOptions}}2,4,6,4,3,3,4,6,4,2{{/peity-chart}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6">
                <div class="silver-border" style="height: 260px; padding-left: 15px; padding-right: 15px; margin-bottom: 20px;">
                    <div>
                        <h5>{{fa-icon 'area-chart'}} Realtime Statistics <span class="pull-right badge chart-badge">30ms update</span></h5>
                        {{flot-chart-live height="210px" data=flotChartData options=flotChartOptions}}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-sm-6 col-lg-3">
                {{#metric-box title="Product Sales" bottomText="Today Total Net Revenue." boxShadow=false borderLess=false badgeLabel="Today" badgeClass="bg-blue-2"}}
                    <span class="value"><span class="glyphicon glyphicon-triangle-top green" aria-hidden="true"></span> $1,230,054</span>
                {{/metric-box}}
            </div>
            <div class="col-xs-6 col-sm-6 col-lg-3">
                {{#metric-box title="Year Goal" borderLess=false progressValue=80 showProgressLabel=true type="success" animate=true striped=true
                bottomText="Year To Date Goal of 2016." boxShadow=false
                    badgeLabel="Year" badgeClass="bg-blue-2"}}
                    <span class="value"><span class="glyphicon glyphicon-triangle-top green" aria-hidden="true"></span> $18,758,321</span>
                {{/metric-box}}
            </div>
            <div class="col-xs-6 col-sm-6 col-lg-3">
                {{#metric-box title="Daily Gains" showProgressBar=true borderLess=false progressValue=75 showProgressLabel=true type="success" animate=true striped=true smallProgressBar=true boxShadow=false
                 badgeLabel="Daily" badgeClass="bg-blue-2"}}
                    <span class="value green">75%</span>
                {{/metric-box}}
            </div>
            <div class="col-xs-6 col-sm-6 col-lg-3">
                {{#metric-box title="Month Average" borderLess=false boxShadow=false badgeLabel="Weekly" badgeClass="bg-blue-2" bottomText="Day By Day Revenue."}}
                    <div style="margin-top: 20px;">
                        {{#peity-chart type="bar" options=peityLargeOptions}}2,4,6,4,3,3,4,6,4,2{{/peity-chart}}
                    </div>
                {{/metric-box}}
            </div>
        </div>
    </div>

