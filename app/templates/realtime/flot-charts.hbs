<div class="realtime-charts">
    <div class="row">
        <div class="col-xs-12">
            <h3>Flot Realtime Charts</h3>
            <p class="pull-left">Use the component flot-chart-live for realtime flot chart updates.</p>
        </div>
    </div>

    <div class="clearfix" style="clear: both;"> <hr> </div>


    <div class="row">
      <div class="col-sm-12">
        <div class="well">
            <span class="block-header">Flot Realtime</span>

              <div class="row row-fixed-width">
                    <div class="col-sm-3">
                        <label>Time between updates (ms):</label>
                        {{input value=updateInterval classNames="form-control"}}
                    </div>
                    <div class="col-sm-9">
                        {{flot-chart-live height="200px" data=data options=options}}
                        <hr>
                        <pre>&#123;&#123;flot-chart-live height="200px" data=data options=options&#125;&#125;</pre>
                    </div>
              </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="well">
            <span class="block-header">Chart Customization</span>

              <div class="row row-fixed-width">
                    <div class="col-sm-3">
                        <p>Adjust line sizes, colors, backgrounds, etc.</p>
                    </div>
                    <div class="col-sm-9">
                        {{flot-chart-live height="200px" data=data options=optionsColor}}
                        <hr>
                        <pre>&#123;&#123;flot-chart-live height="200px" data=data options=optionsColor&#125;&#125;</pre>
                    </div>
              </div>
        </div>
      </div>
    </div>

</div>
