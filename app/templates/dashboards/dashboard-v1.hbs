                        <td>{{#peity-chart type="bar" options=peityOptions}}6,5,9,5,3,9,7,3,5,2{{/peity-chart}}</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-blue-2">103</span></td>
                        <td>BALY Inc.</td> <td><span class="green">{{fa-icon "arrow-up"}} 43,3%</span></td>
